!<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/asset/fontawesome/CSS/all.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/style/param.css">
    <link rel="stylesheet" href="/style/style.css">

    <title>Paramètre</title>
</head>
<body>

    <nav>
        <a  href="/" >Vetements </a>
        <a  href="/chaussure" >Chaussure </a>
        <a class="" href="/accssessoire" >Sacs et accessoires </a>
        <a class="navActivf" href="/param" >Paramètre </a>
        <a class="deconnection" href="/deconnecter">Déconnecter</a>

    </nav>

        <div class="paramBox">
    <% if (resultats.length > 0) { %>

            <form action="/setParam" method="post">
                <div class="numOfDay">
                    <label for="numOfDay">Afficher les nouvelle arrivages des </label>
                    <p>
                     <input type="number" name="numOfDay" id="numOfDay" value="<%= resultats[0].numOfDay %>"> 
                    derniers jours
                </p>
                </div>
                <input type="submit" value="Enregistrer">
            </form>
    <% } %>


            <form action="/sendNew" method="post">
                <p>Envoyer des nouvelles au abonnées</p>
                <div class="nouvelles">
                    <label for="sujet">Titre </label>
                    <input type="text" name="sujet" id="sujet" value="<%= (nouvelles.length > 0) && nouvelles[0].sujet %>">                
                </div>
                <div class="nouvelles">
                    <label for="nouvelles">Annoce </label>
                <p>
                     <textarea name="news" id="news" ><%= (nouvelles.length > 0) && nouvelles[0].news %></textarea>
                </p>
                </div>
                <input type="submit" value="Envoyer">
            </form>

        </div>

    

    <div class="mailList">
        <h2>liste des email abbonée</h2>
    <% if (clientabonne.length > 0) { %>
        <div class="mail_list_content">
            <% clientabonne.forEach(mail => { %>
                <p><%= mail.clientMail %></p>
             <% }) %>
    <% } %>

        </div>
    </div>

    <style>

    </style>

    <script src="/js/script.js"></script>

</body>
</html>